[Unit]
Description=The Koala authentication daemon
Wants=koala.service
After=koala.service
OnFailure=failure-notificator@%n.service

[Service]
Group=www-data
Restart=always
UMask=007
ExecStart=/usr/local/bin/oauth2_proxy -config /etc/oauth2_proxy/config.cfg

RuntimeDirectory=oauth2_proxy
RuntimeDirectoryMode=0750

[Install]
WantedBy=multi-user.target

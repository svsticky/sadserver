server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  server_name rottenspringbok.{{ canonical_hostname }};

  ssl_certificate /etc/letsencrypt/live/rottenspringbok.{{ canonical_hostname }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/rottenspringbok.{{ canonical_hostname }}/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/rottenspringbok.{{ canonical_hostname }}/chain.pem;

  location / {
    proxy_pass http://localhost:{{ rottenspringbok_port }}/;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    proxy_set_header Host $http_host;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
  }
}


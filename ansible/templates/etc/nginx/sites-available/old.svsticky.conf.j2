# {{ ansible_managed }}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;

  server_name old.{{ canonical_hostname }};

  ssl_certificate      /etc/letsencrypt/live/old.{{ canonical_hostname }}/fullchain.pem;
  ssl_certificate_key  /etc/letsencrypt/live/old.{{ canonical_hostname }}/privkey.pem;

  root /var/www/old.{{ canonical_hostname }};
  index index.php index.html index.htm;

  include includes/security-headers.conf;
  include includes/php-parameters.conf;

  location ~* /.git/ {
    deny all;
  }

  location / {
    try_files $uri $uri/ /index.php?q=$uri&$args;
  }
}

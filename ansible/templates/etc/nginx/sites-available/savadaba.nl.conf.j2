  server_name ~^(www\.)?savadaba.nl;

  ssl_certificate      /etc/letsencrypt/live/savadaba.nl/fullchain.pem;
  ssl_certificate_key  /etc/letsencrypt/live/savadaba.nl/privkey.pem;

  include includes/security-headers.conf;

  return 301 https://drive.google.com/folderview?id=0B0RXrs5ApYipR1RYbGZnbnVMVkU;
}

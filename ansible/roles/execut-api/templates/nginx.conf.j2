# {{ ansible_managed }}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  server_name api.execut.nl;

  ssl_certificate /etc/letsencrypt/live/execut-api.{{ canonical_hostname }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/execut-api.{{ canonical_hostname }}/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/execut-api.{{ canonical_hostname }}/chain.pem;

  include includes/security-headers.conf;

  location / {
    proxy_pass http://localhost:3000/;
  }
}

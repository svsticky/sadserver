# Database credentials
DATABASE_USER=koala
DATABASE_PASSWORD={{ lookup('password', 'credentials/mysql/koala chars=hexdigits length=64') }}
DATABASE_SOCKET=/var/run/mysqld/mysqld.sock

# Secrets
RAILS_SECRET={{ lookup('password', 'credentials/koala/rails_secret chars=hexdigits length=128') }}
DEVISE_SECRET={{ lookup('password', 'credentials/koala/devise_secret chars=hexdigits length=128') }}

# API tokens
MAILGUN_DOMAIN=
MAILGUN_TOKEN=
CHECKOUT_TOKEN={{ lookup('password', 'credentials/koala/checkout_token chars=hexdigits length=128') }}

# AWS credentials
AWS_ACCESS=
AWS_SECRET=

# Other
IDEAL_PLATFORM=
RAILS_ENV={{ koala_environment }}

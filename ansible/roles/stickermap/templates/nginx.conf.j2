server{
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name ~^(stickers|stickermap|plakplaats)\.{{ canonical_hostname }};

    ssl_certificate /etc/letsencrypt/live/stickers.{{ canonical_hostname }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/stickers.{{ canonical_hostname }}/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/stickers.{{ canonical_hostname }}/chain.pem;

    include includes/security-headers.conf;

    proxy_pass http://localhost:7050/;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    proxy_set_header Host $http_host;
}

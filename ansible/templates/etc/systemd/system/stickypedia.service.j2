# {{ ansible_managed }}

[Unit]
Description=Run stickypedia (gollum)
After=network.target
OnFailure=failure-notificator@%n.service

[Service]
Type=simple
User=stickypedia
Group=www-data
Restart=always

WorkingDirectory=/var/www/stickypedia/stickypedia.{{ canonical_hostname }}

RuntimeDirectory=wiki
RuntimeDirectoryMode=0770

ExecStart=gollum

[Install]
WantedBy=multi-user.target

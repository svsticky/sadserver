# {{ ansible_managed }}

[Unit]
Description=Backup of the contents of the admins' home directories to AWS S3
OnFailure=backup-fail@the\x20admins\x27\x20home\x20directories.service

[Service]
Type=simple
User=root
Group=root
PrivateTmp=true
ExecStartPre=/usr/local/bin/backup-to-s3.sh admins
ExecStart=/bin/sh -c "echo \"*{% if staging %}_FROM STAGING:_ {% endif %}Backup of admins' home directories completed* _($(date +'%F %T %:z'))_\" | /usr/local/bin/slacktee --plain-text --username 'Backup service' --icon ':floppy_disk:' --attachment 'good'"

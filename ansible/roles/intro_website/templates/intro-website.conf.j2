# {{ ansible_managed }}

server {
  listen      443 ssl http2;
  listen [::]:443 ssl http2;

  server_name intro.{{ canonical_hostname }};

  ssl_certificate         /etc/letsencrypt/live/intro.{{ canonical_hostname }}/fullchain.pem;
  ssl_certificate_key     /etc/letsencrypt/live/intro.{{ canonical_hostname }}/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/intro.{{ canonical_hostname }}/chain.pem;

  root /var/www/intro-website/;
  index index.html;
  error_page 404 /404.html;

  include includes/security-headers.conf;
}

# {{ ansible_managed }}

[Unit]
Description=Failure notification of the backup of %I

[Service]
Type=oneshot
User=ansible
Group=ansible
ExecStart=/bin/sh -c "echo \"{% if staging == 'true' %}*_FROM STAGING:_*{% else
%}@it-crowd-commissie{% endif %} *Backup of %I FAILED!*\
_($(date +'%F %T %:z'))_\" | /usr/local/bin/slacktee --plain-text --username\
'Backup service' --icon ':exclamation:' --attachment 'danger'"

# {{ ansible_managed }}

# Database credentials
DATABASE_USER=koala
DATABASE_PASSWORD={{ secret_mysql.koala.password }}
DATABASE_SOCKET=/var/run/mysqld/mysqld.sock

SECRET_KEY_BASE={{ secret_koala.rails_secret }}
DEVISE_SECRET={{ secret_koala.devise_secret }}

# API tokens
MAILGUN_DOMAIN={{ canonical_hostname }}
MAILGUN_TOKEN={{ secret_mailgun_token }}
CHECKOUT_TOKEN={{ secret_koala.checkout_token }}
SENTRY_DSN={{ secret_koala.sentry_dsn | default('') }}

# AWS credentials
AWS_ACCESS={{ secret_koala.aws_access_key }}
AWS_SECRET={{ secret_koala.aws_secret_key }}
AWS_REGION={{ aws_region }}
AWS_BUCKET={% if 'staging' in group_names %}staging-{% endif %}koala-images

# Mollie
MOLLIE_DOMAIN=https://api.mollie.nl
MOLLIE_TOKEN={{ secret_mollie_token }}
MOLLIE_VERSION=v1

# Other
RAILS_ENV={{ koala_env.environment }}
RAILS_MAX_THREADS={{ koala.threads }}

# {{ ansible_managed }}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;

  server_name {{ item.name }}.{{ item.suffix }}
  {% for hostname in item.alternative_names %}
    {{ hostname }}
  {% endfor %};

  ssl_certificate      /etc/letsencrypt/live/{{ item.name }}.{{ item.suffix }}/fullchain.pem;
  ssl_certificate_key  /etc/letsencrypt/live/{{ item.name }}.{{ item.suffix }}/privkey.pem;

  root /var/www/{{ item.user }}/{{ item.name }}.{{ item.suffix }};
  index index.html index.htm index.php;

  include includes/security-headers.conf;
  include includes/php-parameters.conf;
}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  server_name ~^(domjudge)\.{{ canonical_hostname }};

  ssl_certificate /etc/letsencrypt/live/domjudge.{{ canonical_hostname }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/domjudge.{{ canonical_hostname }}/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/domjudge.{{ canonical_hostname }}/chain.pem;

  location / {
    proxy_pass http://localhost:4570/;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    proxy_set_header Host $http_host;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
  }
}

#!/bin/bash
# {{ ansible_managed }}

set -efu -o pipefail

TMPDIR=/tmp
FILE="admins-$(date +'%Y-%m-%d').tar.gz"
HASH=sha256 # Choose from md5/sha1/sha224/sha256/sha384/sha512
S3PATH="s3://sticky-automatic-backups/admins"

tar --exclude='/home/koala/.rbenv' --exclude='/home/koala/.bundle' -cvf - /home | gzip -9 > ${TMPDIR}/${FILE}
${HASH}sum ${TMPDIR}/${FILE} > ${TMPDIR}/${FILE}.${HASH}
aws s3 cp ${TMPDIR}/ ${S3PATH}/ --recursive
rm ${TMPDIR}/${FILE}
aws s3 cp ${S3PATH}/${FILE} ${TMPDIR}/${FILE}
${HASH}sum --check ${TMPDIR}/${FILE}.${HASH}
